<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/8a898c22d4.js" crossorigin="anonymous"></script>
    <!-- our css should be below all other external css that we can override it -->
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>

    <!-- <h1>This is Ejs fileviews</h1> -->
    <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        My Contacts List
    </h1>

    <div id="contact-details">
        
       <ul>
       <% for(let i of contact_list) { %> 
        
        <li class="inside-contact">
            <div class="details">
                <p style="display: inline-block;"><%=i.name %></p> 
                <p style="display: inline-block;"><%=i.phone %></p>
            </div>  
            <div class="delete">
                <a href="/delete-contact/?id=<%= i.id %>">
                    <i class="fa-solid fa-trash" style="color: red;" >
                    </i>
                </a> 
            </div>
        </li>
        
        <% } %>


        </ul>
    </div>


    <form action="/create-contact" method="post">
        <input type="text" name="name" placeholder="Enter Name" required>
        <input type="text" name="phone" placeholder="Enter Phone no." required>
        <button type="submit">Save Contact</button>



    </form>

    <script type="text/javascript" src="/js/home.js"></script>

</body>
</html>